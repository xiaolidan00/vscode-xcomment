{
  "name": "vscode-xcomment",
  "displayName": "vscode-xcomment",
  "description": "typescript and javascript add comment",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.108.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscode-xcomment.wholeComment",
        "title": "xComment:Whole"
      },
      {
        "command": "vscode-xcomment.selectComment",
        "title": "xComment:Select"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "vscode-xcomment.wholeComment",
          "when": "editorTextFocus && resourceFilename =~ /.(js|ts|vue)$/",
          "group": "1_modification@100",
          "alt": "vscode-xcomment.wholeComment",
          "key": "alt+A+/"
        },
        {
          "command": "vscode-xcomment.selectComment",
          "when": "editorTextFocus && resourceFilename =~ /.(js|ts|vue)$/",
          "group": "1_modification@101",
          "alt": "vscode-xcomment.selectComment",
          "key": "alt+/"
        }
      ]
    },
    "keybindings": [
      {
        "command": "vscode-xcomment.wholeComment",
        "key": "alt+A+/",
        "when": "editorTextFocus && resourceFilename =~ /.(js|ts|vue)$/"
      },
      {
        "command": "vscode-xcomment.selectComment",
        "key": "alt+/",
        "when": "editorTextFocus && resourceFilename =~ /.(js|ts|vue)$/"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/jsdom": "^27.0.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.108.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "@vue/compiler-dom": "^3.5.27",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.52.0"
  },
  "dependencies": {
    "jsdom": "^27.4.0"
  }
}
